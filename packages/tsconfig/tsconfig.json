{
  "compilerOptions": {
    "target": "es6", // JavaScript의 목표 버전 (보통 ES6 이상)
    "module": "commonjs", // Node.js에서는 commonjs 사용 (브라우저는 ESModules)
    "moduleResolution": "node", // Node.js 모듈 해석 방식 사용
    "strict": true, // 엄격한 타입 검사 활성화
    "esModuleInterop": true, // ES 모듈과 CommonJS 모듈 간 호환성
    "skipLibCheck": true, // 라이브러리 파일 타입 검사 건너뛰기 (속도 향상)
    "forceConsistentCasingInFileNames": true, // 대소문자 구분 강제 (윈도우에서만 유효)
    "noEmit": true, // 빌드 시 실제 JavaScript 파일을 생성하지 않음 (타입 검사만)
    "resolveJsonModule": true, // JSON 파일을 모듈로 불러올 수 있도록 설정
    "isolatedModules": true, // 모든 파일을 개별적으로 처리
    "skipDefaultLibCheck": true, // 기본 라이브러리 타입 검사 건너뛰기 (속도 향상)
    "strictNullChecks": true, // null과 undefined 처리 엄격하게
    "noUnusedLocals": true, // 사용하지 않는 지역 변수 경고
    "noUnusedParameters": true, // 사용하지 않는 매개변수 경고
    "alwaysStrict": true, // 모든 파일에서 엄격 모드 사용
    "types": ["node", "jest"], // 사용하는 라이브러리 타입 지정 (예: Node.js, Jest)
    "lib": ["es2021", "dom", "dom.iterable", "esnext"] // 표준 라이브러리 설정 (예: ES2021, DOM)
  }
}
